    </script>
{% endblock %}

{% block body %}
    <div class="section padding-top-from-nav background-black"></div>

    <div class="section padding-top-bottom background-black">
        <div class="container">
            <div class="three columns">
                <div class="subtitle-small">
                    Do you have a project, need advice or just ask me a question ?
                </div>
            </div>
            <div class="three columns">
                <div class="title">
                    <h6><span>-</span> drop me a line</h6>
                </div>
            </div>
            <form name="ajax-form" id="ajax-form" action="mail-it.php" method="post">
                <div class="three columns">
                    <label for="name">
                        <span class="error" id="err-name">please enter your name</span>
                    </label>
                    <input name="name" id="name" type="text" placeholder="Your name : *" />
                </div>
                <div class="three columns">
                    <label for="email">
                        <span class="error" id="err-email">please enter your e-mail</span>
                        <span class="error" id="err-emailvld">your e-mail is not a valid format</span>
                    </label>
                    <input name="email" id="email" type="text" placeholder="Your e-mail : *" />
                </div>
                <div class="clear"></div>
                <div class="six columns offset-by-six remove-top">
                    <label for="message"></label>
                    <textarea name="message" id="message" placeholder="Tell me everything"></textarea>
                </div>
                <div class="clear"></div>
                <div class="six columns offset-by-six remove-top">
                    <div id="button-con"><button class="send_message button-effect button--moema button--text-thick button--text-upper button--size-s" id="send" data-lang="en">submit</button></div>
                </div>
                <div class="clear"></div>
                <div class="six columns offset-by-six remove-top">
                    <div class="error text-align-left" id="err-form">There was a problem validating the form, please check !</div>
                    <div class="error text-align-left" id="err-timedout">The connection to the server timed out !</div>
                    <div class="error" id="err-state"></div>
                </div>
            </form>

            <div class="clear"></div>
            <div id="ajaxsuccess">Successfully sent!!</div>
            <div class="clear"></div>
        </div>
    </div>

    <div class="section padding-bottom background-black">
        <div id="cd-google-map">
            <div id="google-container"></div>
            <div id="cd-zoom-in"></div>
            <div id="cd-zoom-out"></div>
        </div>
    </div>
{% endblock %}

{% block javascript_part3 %}
    <script src="{{ asset('js/fitvids.min.js') }}"></script>
{% endblock %}

{% block javascript_part4 %}
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAWjyb1ni-QUtQamI3h4kcMIubHbsw0kQs"></script>
    <script src="{{ asset('js/contact.min.js') }}"></script>
    <script src="{{ asset('js/custom-contact.min.js') }}"></script>
{% endblock %}